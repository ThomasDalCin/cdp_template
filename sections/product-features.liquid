        "label": "Product Specifications"
      },
      {
        "type": "text",
        "id": "product_dimensions",
        "default": "Dimensions",
        "label": "Product Dimensions"
      }, {
        "type": "text",
        "id": "product_weights",
        "default": "Weights",
        "label": "Product Weights"
      }, {
        "type": "text",
