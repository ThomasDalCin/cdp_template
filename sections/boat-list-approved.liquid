{% schema %}
  {
    "name": "list-approved",
    "settings": [
      {
        "type": "text",
        "id": "approved_cta",
        "default": "See Details",
        "label": "Approved Cta",
        "info": "Set the cta text"
      }
    ]
  }
{% endschema %}