<!-- Layout Boat list Approved -->
<div id="pressroom-layout" class="blogs-list-container press-room w-full h-auto flex flex-col gap-y-4 p-6 mb-10 mt-[194px] md:px-12 md:mb-20 md:py-0 lg:p-0 lg:mb-0">
  <!-- list approved loop -->
  <div class="flex flex-wrap gap-4 justify-center md:pt-10 md:flex-row md:flex-wrap md:gap-x-4 md:items-start md:justify-start lg:justify-start lg:px-20 lg:pt-[60px] lg:pb-[120px]">

    {% for collection in collections %}
      {% if collection.title == 'Pardo approved' %}
        {% assign pardoApproved = collection.products %}
        {% for product in pardoApproved %}
          <div class="card-product-item-press-room w-full md:w-[calc(50%_-_0.5rem)] lg:w-[calc(50%_-_0.5rem)] flex flex-col rounded-2xl md:min-h-[524px] lg:gap-y-0 lg:min-h-[524px] lg:h-[524px] border border-transparent lg:hover:border lg:hover:border-black lg:cursor-pointer">

            <img
              src="{{ product.featured_image | img_url: 'master' }}"
              class="w-full h-auto max-h-[220px] object-cover rounded-t-2xl"
              alt="product image">

            <div class="product-item-details flex flex-col gap-y-4 p-6 lg:gap-y-6 bg-[#EFEEED] lg:p-6 rounded-b-2xl relative lg:h-full">
              {% assign productFlag = product.metafields.custom.country.value %}
              {% assign productCountry = product.metafields.custom.approved_location.value %}
              <div class="product-item-main w-full h-auto flex flex-col gap-y-2 items-start justify-center">
                {% if productFlag and productCountry %}
                  <div class="product-item-main-primary w-full h-auto flex flex-row items-center justify-start gap-x-2">
                    <img src="{{ productFlag |  img_url: 'master' }}" alt="{{ productFlag.alt }}" class="w-5 h-4 object-cover object-center">
                    <p class="caption">{{ productCountry }}</p>
                  </div>
                {% endif %}
                <div class="product-item-main-secondary w-full h-auto flex flex-col items-start justify-center gap-y-1">
                  <p class="body-16 tt-norms-pro-med">{{ product.title }}</p>
                  <p class="body-16">{{ product.description }}</p>
                </div>
              </div>
              <div class="product-info-container w-full h-auto flex flex-row items-start justify-between p-4 bg-[var(--primary-background-color)] rounded-lg lg:justify-start lg:flex-row gap-x-4">
                <p class="lg:w-[147px]">&bull; <span class="caption">Year: {{ product.metafields.custom.year.value }}</span></p>
                <p class="lg:w-[147px]">&bull; <span class="caption">Series: {{ product.metafields.custom.series.value }}</span></p>
              </div>  

              <div class="blog-item-cta w-full h-auto flex items-center justify-end lg:absolute lg:right-0 lg:left-0 lg:bottom-6 lg:pr-6">
                <div class="cta-choco-round h-[32px] flex items-center gap-x-2 ">
                  <a href="{{ product.url }}">
                    <p class="body-16-medium-medium">{{ section.settings.approved_cta |  default: "See details" }}</p>
                  </a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    {% endfor %}

  </div>
</div>


{% comment %}
  Section Schema Settings here;
{% endcomment %}
{% schema %}
  {
    "name": "list-approved",
    "settings": [
      {
        "type": "text",
        "id": "approved_cta",
        "default": "See Details",
        "label": "Approved Cta",
        "info": "Set the cta text"
      }
    ]
  }
{% endschema %}