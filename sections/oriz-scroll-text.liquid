<!-- oriz scroll down section text -->
<div
  class="w-full h-auto flex flex-col items-start justify-center px-6 pt-12 pb-14 gap-y-6 md:px-12 md:py-12 lg:px-20 lg:pt-[60px] lg:pb-20">
  <!-- main title -->
  <p class="text-[30px] leading-[30px] tt-norms-pro-med">{{ "Discover" |  append: ' ' |  append: collection.title }}</p>
  <!-- paragraph here -->
  {% assign collection_metaObj_group = collection.metafields.custom.collection_metafields_group.value %}
  {% assign collection_gamma_text = "discover_gamma_text" %}
  {% assign collection_metaObj_gamma_value = collection_metaObj_group[collection_gamma_text] %}
  {% if collection_metaObj_gamma_value %}
  <p class="body-14">{{ collection_metaObj_gamma_value }}</p>
  {% else %}
  <p class="body-14">No items found</p>

  {% endif %}

</div>