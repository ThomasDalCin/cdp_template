{% schema %}
  {
    "name": "article-content",
    "settings": [
      {
        "type": "text",
        "id": "article_cta_text",
        "default": "Back",
        "label": "Article Text Cta",
        "info": "Set the text inside your Cta"
      }
    ]
  }
{% endschema %}