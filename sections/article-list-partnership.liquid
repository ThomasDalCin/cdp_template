<!-- Articles partnership blog-->
<div class="wrapper-articles-list w-full h-auto flex flex-col items-start justify-center gap-y-4 p-6  md:px-12 md:pt-[60px] md:flex-row md:flex-wrap md:gap-x-4 md:items-start md:justify-start lg:px-20 lg:pt-[60px] lg:flex-row lg:flex-wrap lg:gap-x-4 lg:items-center lg:justify-start">
  <!-- Assign liquid variables -->
  {% assign allBlogs = "Partnership, " | split: "," %}
  {% for handle in allBlogs %}
  {% for article in blogs[handle].articles %}
  {% unless article.tags contains "Past" %}
  <!-- Article wrap container -->
  <div
    class="card-article w-full h-auto flex flex-col items-start justify-start rounded-2xl bg-[#EFEEED] md:w-[calc(50%_-_0.5rem)] lg:w-[calc(50%_-_0.5rem)] border border-transparent transition-all duration-150 lg:hover:border-black cursor-pointer">
    <!-- Article image -->
    <div class="w-full h-[220px] min-h-[220px]">
      <img src="{{ article.image |  img_url: 'master'}}" alt="{{ article.title }}"
        class="w-full h-full object-cover object-center rounded-t-2xl">
    </div>
    <!-- Article content -->
    <div class="card-article-content w-full h-auto flex flex-col gap-y-6 items-start justify-start p-6">
      <div class="w-full h-auto flex flex-col items-start justify-center gap-y-3">
        <p class="text-[24px] leading-[24px] tt-norms-pro-reg">{{ article.title }}</p>
        <p class="text-[16px] leading-[20px] lg:text-[18px] lg:leading-[24px]">{{ article.content | truncate: 100 }}</p>
      </div>
      <!-- Article button container -->
      <div class="w-full h-auto flex flex-row items-start justify-end">
        <!-- Container button -->
        <a href="{{ article.url }}">
          <div class="inline-flex cta-choco-round w-auto min-w-[129px] h-[32px]">
            <p class="text-[16px] leading-[20px] tt-norms-pro-reg lg:text-[18px] lg:leading-[24px]">{{ section.settings.cta_text | default: "Discover more" }}</p>
          </div>
        </a>
      </div>
    </div>
  </div>
  {% endunless %}
  {% endfor %}
  {% endfor %}
</div>