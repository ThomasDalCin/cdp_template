<!-- Hero Wrapper Section for Mobile -->
<div class="hero-wrapper w-full h-svh relative lg:hidden">
  <div class="wrapper-slider w-full h-full absolute overflow-x-hidden left-0 top-0 right-0 z-0">

    <!-- Swiper Slider for Mobile -->
    <div class="swiper mySwiper swiper-mobile w-full h-full relative">
      <div class="swiper-wrapper">

        <!-- Swiper Slide for Mobile -->
        {% assign swiper_images_mobile = "swiper_video_mobile,swiper_image_1_mobile,swiper_image_2_mobile,swiper_image_3_mobile" | split: "," %}
        {% assign cta_texts_mobile = "cta_text_1_mobile,cta_text_2_mobile,cta_text_3_mobile,cta_text_4_mobile" | split: "," %}
        {% assign cta_urls_mobile = "cta_url_1_mobile,cta_url_2_mobile,cta_url_3_mobile,cta_url_4_mobile" | split: "," %}
        {% assign cta_enabled_mobile = "enable_cta_1_mobile,enable_cta_2_mobile,enable_cta_3_mobile,enable_cta_4_mobile" | split: "," %}
        {% assign max_index_mobile = swiper_images_mobile.size | minus: 1 %}

        {% for i in (0..max_index_mobile) %}
          {% assign swiper_image_mobile = swiper_images_mobile[i] %}
          {% assign cta_text_mobile = cta_texts_mobile[i] %}
          {% assign cta_url_mobile = cta_urls_mobile[i] %}
          {% assign cta_check_mobile = cta_enabled_mobile[i] %}
          {% assign image_url_mobile = section.settings[swiper_image_mobile] | img_url: "master" %}

          <!-- Swiper Slide -->
          <div class="swiper-slide relative">
            <!-- Check for Video -->
            {% if swiper_image_mobile == "swiper_video_mobile" and section.settings[swiper_image_mobile] %}
              <video autoplay playsinline muted loop class="swiper-img w-full h-full object-cover block">
                <source src="{{ section.settings[swiper_image_mobile] }}" type="video/mp4">
              </video>
            {% elsif image_url_mobile %}
              <!-- Swiper Image Slide for Mobile -->
              <img src="{{ image_url_mobile }}" alt="Slide {{ i | plus: 1 }}" class="swiper-img w-full h-full object-cover block">
            {% endif %}

            <!-- Check for CTA (only show it if the CTA is enabled for that slide) -->
            {% if section.settings[cta_check_mobile] %}
              <div class="w-full h-auto absolute left-0 bottom-14 right-0 px-4 lg:flex lg:items-center lg:justify-center">
                <a href="{{ section.settings[cta_url_mobile] }}">
                  <div class="w-full h-[48px] bg-white flex items-center justify-center rounded-xl font-semibold lg:w-[220px]">
                    <p class="body-16 tt-norms-pro-med tracking-wide leading-[22px] lg:text-[18px] lg:leading-[24px]">{{ section.settings[cta_text_mobile] }}</p>
                  </div>
                </a>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <!-- Swiper Pagination for Mobile -->
      <div class="container-swiper-pagination w-full h-auto absolute left-0 right-0 bottom-6 z-10 flex items-start justify-center">
        <div class="w-auto h-auto">
          <div class="swiper-pagination"></div>
        </div>
      </div>

      <!-- Navigation for Mobile -->
      <div class="w-auto h-auto hidden lg:block">
        <div class="swiper-button-next bg-[rgba(0,0,0,0.20)] backdrop-blur-xl w-[52px] h-[52px] rounded-full text-white mr-10"></div>
      </div>
      <div class="w-auto h-auto hidden lg:block">
        <div class="swiper-button-prev bg-[rgba(0,0,0,0.20)] backdrop-blur-xl w-[52px] h-[52px] rounded-full text-white ml-10"></div>
      </div>
    </div>
  </div>
</div>



