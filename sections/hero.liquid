<div class="hero-wrapper w-full h-dvh overflow-y-hidden relative mb-[40px]">
  <div class="wrapper-slider w-full h-full absolute overflow-y-hidden left-0 top-0 right-0 z-0">
    <div class="swiper mySwiper w-full h-full relative overflow-y-hidden">
      <div class="swiper-wrapper">
        {% assign swiper_images = "swiper_image_1,swiper_image_2,swiper_image_3," | split: "," %}
        {% for swiper_image in swiper_images %}
          {% assign image_url = section.settings[swiper_image] | img_url: "master" %}
          {% if image_url %}
            <div class="swiper-slide relative">
              <img
                src="{{ image_url }}"
                alt="{{ swiper_image.alt }}"
                class="swiper-img w-full h-full object-cover block">
              <div class="hero-text-content absolute left-4 bottom-4 right-4 flex items-start justify-start flex-col gap-y-10 lg:inline-flex lg:w-auto lg:h-auto lg:bottom-6 lg:left-6">
                {% case forloop.index0 %}
                  {% when 0 %}
                    <h2 class="big-header-1 text-white lg:text-[96px] lg:leading-[96px]">GT75</h2>
                    <div class="hero-cta lg:inline-flex lg:w-auto lg:p-4 lg:rounded-full lg:min-w-[220px]">
                      <p class="body-14-medium">{{ section.settings.slide_text_one }}</p>
                      {% render "cta-icon" %}
                    </div>
                  {% when 1 %}
                    <h2 class="big-header-1 text-white lg:text-[96px] lg:leading-[96px]">E60</h2>
                    <div class="hero-cta lg:inline-flex lg:w-auto lg:p-4 lg:rounded-full lg:min-w-[220px]">
                      <p class="body-14-medium">{{ section.settings.slide_text_two }}</p>
                      {% render "cta-icon" %}
                    </div>
                  {% when 2 %}
                    <h2 class="big-header-1 text-white lg:text-[96px] lg:leading-[96px]">Details.</h2>
                    <div class="hero-cta lg:inline-flex lg:w-auto lg:p-4 lg:rounded-full lg:min-w-[220px]">
                      <p class="body-14-medium">{{ section.settings.slide_text_three }}</p>
                      {% render "cta-icon" %}
                    </div>
                {% endcase %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="container-swiper-pagination absolute left-4 top-[120px] z-10 lg:left-6 lg:top-[150px] lg:flex lg:flex-col lg:gap-y-6 lg:items-center lg:justify-center">
        <div class="swiper-pagination mb-8 flex items-center justify-start lg:mb-[70px]"></div>
        <h1 class="header-3 text-[var(--secondary-text-color)] lg:text-[60px] lg:leading-[60px] lg:text-black">{{ section.settings.hero_heading }}</h1>
      </div>
    </div>
  </div>
</div>

<style>
  .swiper-slide{
    touch-action: pan-y;
  }
</style>

<!-- Initialize Swiper -->
<script>
  var swiper = new Swiper(".mySwiper", {
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true
    },
    loop: true
  });
</script>

<!-- Swiper Custom Style -->
<style>
  .swiper-pagination-bullet.swiper-pagination-bullet-active {
    background-color: var(--secondary-text-color) !important;
  }

  @media screen and (min-width: 1024px) {
    .swiper-pagination-bullet.swiper-pagination-bullet-active {
      background-color: var(--primary-text-color) !important;
    }
  }
</style>


