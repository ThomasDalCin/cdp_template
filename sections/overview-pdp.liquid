<!--overview-pdp-->
<div class="w-full h-auto flex items-center justify-center fixed z-10 left-0 bottom-8 right-0">
    <!--container fab pdp-->
    <div
        class="w-[120px] h-[40px] flex flex-col items-center justify-center px-6 py-[10px] rounded-full bg-[rgba(0,0,0,0.20)] backdrop-blur-xl badge-overlay">
        <p class="body-14 text-white">{{ section.settings.cta_text | default: "Overview" }}</p>
    </div>

</div>


<!--container nav items-->
<div
    class="container-ancor-links w-full h-auto fixed left-0 bottom-0 right-0 flex flex-col items-center justify-center z-30 py-8 bg-[rgba(0,0,0,0.20)] backdrop-blur-lg rounded-t-lg gap-y-8 translate-y-[1000px] transition-all duration-200 ease container-ancor-links lg:w-[430px] lg:rounded-[32px] lg:fixed lg:hidden lg:left-1/2 lg:top-1/2 lg:-translate-x-1/2 lg:-translate-y-1/2">
    <p class="body-14 text-white font-light">{{ section.settings.overlay_main | default: "Overview" | upcase }}</p>
    <ul class="w-full h-auto flex flex-col items-center justify-center gap-y-4">
        <a href="#design" class="ancor-link">
            <li class="body-16 text-white">{{ section.settings.item_one | default: "Design" }}</li>
        </a>
        <a href="#Topview" class="ancor-link">
            <li class="body-16 text-white">{{ section.settings.item_one | default: "Top view" }}</li>
        </a>
        <a href="#Tech" class="ancor-link">
            <li class="body-16 text-white">{{ section.settings.item_one | default: "Technical feature" }}</li>
        </a>
        <a href="#General" class="ancor-link">
            <li class="body-16 text-white">{{ section.settings.item_one | default: "General Arrangment" }}</li>
        </a>
        <a href="#Gallery" class="ancor-link">
            <li class="body-16 text-white">{{ section.settings.item_one | default: "Gallery" }}</li>
        </a>
    </ul>
    <div class="w-full h-auto flex items-center justify-center text-white closing-icon lg:absolute lg:right-6 lg:top-6 lg:justify-end lg:inline-flex lg:z-30">
        {% render 'x-icon' %}
    </div>
</div>

<script>
 document.addEventListener('DOMContentLoaded', () => {
    // Ottieni gli elementi
    const containerLinks = document.querySelector('.container-ancor-links');
    const closingIcon = document.querySelector('.closing-icon');
    const badgeOverlay = document.querySelector('.badge-overlay');

    // Funzione per aprire il menu
    const openMenu = () => {
        if (window.innerWidth >= 1024) { // Se la larghezza della finestra è maggiore di 1024px (lg)
            containerLinks.classList.remove('lg:hidden'); // Rimuovi 'hidden' per lg
        } else {
            containerLinks.classList.remove('translate-y-[1000px]'); // Rimuovi la classe di traslazione per sm/md
        }
        badgeOverlay.classList.add('hidden'); // Nascondi il badge
    };

    // Funzione per chiudere il menu
    const closeMenu = () => {
        if (window.innerWidth >= 1024) { // Se la larghezza della finestra è maggiore di 1024px (lg)
            containerLinks.classList.add('lg:hidden'); // Aggiungi 'hidden' per lg
        } else {
            containerLinks.classList.add('translate-y-[1000px]'); // Aggiungi la classe di traslazione per sm/md
        }
        badgeOverlay.classList.remove('hidden'); // Mostra il badge
    };

    // Evento clic sul badge per aprire il menu
    badgeOverlay.addEventListener('click', openMenu);

    // Evento clic sull'icona di chiusura per chiudere il menu
    closingIcon.addEventListener('click', closeMenu);
});
</script>
