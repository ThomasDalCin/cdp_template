<!--pardo care service section -->
<div class="pardo-care-service-container w-full h-auto flex flex-col gap-y-8 mb-[40px] p-4 lg:px-10">
  <div class="pardo-care-service-container-heading w-full h-auto flex flex-col gap-y-6 items-start justify-center">
    <h2 class="header-2">{{ section.settings.section_heading }}</h2>
  </div>
  <div class="pardo-care-service-container-film-strip h-auto">
    <div class="container-film-strip w-[calc(100%+2rem)] h-auto flex flex-row items-center justify-start gap-x-3  overflow-x-auto  p-4 -mt-4 lg:p-10 lg:-mt-10 ">
      {% for block in section.blocks %}
        {% if block.type == 'scroll-image-card' %}
          <div class="container-filmstrip-card w-auto h-auto max-h-[423px] flex flex-col m-1 gap-y-2 rounded-lg shadow-custom lg:flex-1 lg:m-0 lg:w-[calc(33.3%_-_0.75rem)]">
            <img 
              src="{{ block.settings.card_image |  img_url: 'master' }}"
              alt="{{ block.settings.card_image.alt }}"
              class="card-image w-[320px] h-[160px] min-w-[320px] object-cover object-center rounded-t-lg lg:min-w-full">
            <div class="container-filmstrip-card-text w-full h-auto flex flex-col gap-y-3 items-start justify-center p-4 lg:p-6">
              <p class="body-14-medium">{{ block.settings.card_title }}</p>
              <p class="body-12 text-[var(--accent-hover-color)]">{{ block.settings.card_text }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "pardo-care-section",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "default": "When you choose us, we choose you.",
        "label": "Section Heading"
      }
    ],
    "blocks": [
      {
        "name": "scroll-image-card",
        "type": "scroll-image-card",
        "settings": [
          {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card Image"
          }, {
            "type": "text",
            "id": "card_title",
            "default": "Boat ready for every outing.",
            "label": "Card title"
          }, {
            "type": "textarea",
            "id": "card_text",
            "default": "Sorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis.",
            "label": "Card Text"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "scroll-image-card",
        "category": "custom",
        "settings": {
          "section_heading": "When you choose us, we choose you."
        },
        "blocks": [
          {
            "type": "scroll-image-card",
            "settings": {
              "card_image": "shopify:\/\/shop_images\/image_7.png",
              "card_title": "Barca pronta per ogni uscita",
              "card_text": "Sorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
            }
          }
        ]
      }
    ]
  }
{% endschema %}