<!-- collab section home page -->
<div class="collab-scroll w-full h-auto flex flex-col items-center justify-start gap-y-6 bg-[#262322] px-6 py-14">
  {% for block in section.blocks %}
    {% if block.type == "collab-card" %}
      <div class="w-full h-[480px] collab-container px-6 bg-[#8B7E7A] flex flex-col items-start justify-start relative lg:px-[100px] lg:flex-1 lg:h-[400px]">
        <p class="text-[32px] leading-[38px] text-white">{{ block.settings.collab_custom_collab_heading | default: "Collaboration" }}</p>
        <img
          src="{{ collab_custom_collab_image }}"
          class="w-full h-full object-contain lg:h-[30px] lg:object-contain absolute -translate-x-1/2 -translate-y-1/2 left-1/2 top-1/2"
          alt="{{ collab_custom_collab_image.alt }}">
        <a href="{{}}">
          <div class="w-auto h-auto inline-flex flex-row items-start justify-center">
            <p class="body-16 text-white">{{ block.settings.collab_custom_collab_cta_text | default: "Discover" }}</p>
            {% render 'cta-icon' %}
          </div>
        </a>
      </div>
    {% endif %}
  {% endfor %}
</div>


