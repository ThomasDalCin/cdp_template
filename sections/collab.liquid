{% schema %}
  {
    "name": "Collab-Cards",
    "blocks": [
      {
        "name": "collab-card",
        "type": "collab-card",
        "settings": [
          {
            "type": "text",
            "id": "collab_custom_collab_heading",
            "label": "Collab Costum Heading",
            "info": "Choose the collab heading"
          }, {
            "type": "text",
            "id": "collab_custom_collab_cta_text",
            "label": "Collab Costum Cta Text",
            "info": "Choose the collab cta text"
          }, {
            "type": "image_picker",
            "id": "collab_custom_collab_image",
            "label": "Collab Costum Image",
            "info": "Choose the collab Image"
          }
        ]
      }
    ],
    "max_blocks": 5,
    "presets": [
      {
        "name": "Collab Cards Section",
        "category": "Custom Sections",
        "settings": {
          "collab_image_1": "shopify://shop_images/PardoYatch-Home-Collaborations-FalconerixPardo.png",
          "collab_image_2": "shopify://shop_images/PardoYatch-Home-Collaborations-FalconerixPardo.png"
        }
      }
    ]
  }
{% endschema %}