<div class="overlay-images hidden fixed z-50 inset-0 w-full h-svh bg-[#EFEEED] lg:h-screen">

  <!-- Close Button -->
  <div
    class="close-overlay-images absolute right-4 top-6 w-auto h-auto text-white rounded-full flex items-center justify-center p-3 bg-[rgba(0,0,0,0.20)] backdrop-blur-xl z-50 cursor-pointer">
    {% render 'x-icon' %}
  </div>

  <!-- Swiper Wrapper for External Gallery -->
  <div class="swiper swiper-container-overlay-external transition-all duration-200 ease-linear relative hidden">
    <div class="swiper-wrapper">
      {% assign image_keys =
      'boat_image_one,boat_image_two,boat_image_three,boat_image_four,boat_image_five,boat_image_six,boat_image_seven,boat_image_eight,boat_image_nine,boat_image_ten,boat_image_11,boat_image_12,boat_image_13,boat_image_14,boat_image_15'
      | split: ',' %}

      {% for key in image_keys %}
      {% assign mobileImage = product.metafields.custom.external_images_boat.value[key] %}
      {% assign desktopImage = product.metafields.custom.external_boat_images_desktop.value[key] %}

      <div class="swiper-slide h-screen swiper-slide-custom" data-mobile="{{ mobileImage }}"
        data-desktop="{{ desktopImage }}">
        <!-- Mobile Image -->
        {% if mobileImage %}
        <img src="{{ mobileImage | img_url: 'master' }}" alt="{{ mobileImage.alt }}"
          class="w-full h-full object-cover object-center md:hidden lg:hidden">
        {% endif %}
        <!-- Desktop Image -->
        {% if desktopImage %}
        <img src="{{ desktopImage | img_url: 'master' }}" alt="{{ desktopImage.alt }}"
          class="w-full h-full object-cover object-center hidden md:block lg:block">
        {% endif %}
      </div>
      {% endfor %}
    </div>

    <!-- Swiper Pagination -->
    <div
      class="container-swiper-pagination absolute left-0 right-0 bottom-6 w-full h-auto z-10 flex items-center justify-center">
      <div class="swiper-pagination-overlay flex items-center justify-center"></div>
    </div>

    <div class="w-auto hidden absolute top-0 right-0 h-screen items-center justify-center md:flex lg:flex">
      <div
        class="swiper-button-next-external bg-[rgba(0,0,0,0.20)] backdrop-blur-xl w-[52px] h-[52px] rounded-full z-20 mr-10 flex items-center justify-center">
        {% render 'arrow-right-white' %}
      </div>
    </div>
    <div class="w-auto hidden absolute top-0 left-0 h-screen items-center justify-center md:flex lg:flex">

      <div
        class="swiper-button-prev-external bg-[rgba(0,0,0,0.20)] backdrop-blur-xl w-[52px] h-[52px] rounded-full z-20 ml-10 flex items-center justify-center">
        {% render 'arrow-left-white' %}
      </div>
    </div>

    <!-- Turn into Landscape Message -->
    <div
      class="turn-button w-full h-auto flex items-center justify-center absolute left-0 right-0 bottom-[46px] lg:hidden">
      <div class="min-w-[148px] min-h-[32px] bg-[rgba(0,0,0,0.20)] backdrop-blur-xl rounded-3xl py-2 px-4 z-20">
        <p class="body-14 tt-norms-pro-med text-white">
          {{ section.settings.turn_landscape | default: "Turn into landscape" }}
        </p>
      </div>
    </div>
  </div>

  <!-- Swiper Wrapper for Internal Gallery -->
  <div class="swiper swiper-container-overlay-internal transition-all duration-200 ease-linear relative hidden">
    <div class="swiper-wrapper">
      {% assign image_keys =
      'boat_image_one,boat_image_two,boat_image_three,boat_image_four,boat_image_five,boat_image_six,boat_image_seven,boat_image_eight,boat_image_nine,boat_image_ten,boat_image_11,boat_image_12,boat_image_13,boat_image_14,boat_image_15'
      | split: ',' %}

      {% for key in image_keys %}
      {% assign mobileImageInternal = product.metafields.custom.internal_boat.value[key] %}
      {% assign desktopImageInternal = product.metafields.custom.internal_boat_images_desktop.value[key] %}

      <div class="swiper-slide h-screen swiper-slide-custom" data-mobile="{{ mobileImageInternal }}"
        data-desktop="{{ desktopImageInternal }}">
        <!-- Mobile Image -->
        {% if mobileImageInternal %}
        <img src="{{ mobileImageInternal | img_url: 'master' }}" alt="{{ mobileImageInternal.alt }}"
          class="w-full h-full object-cover object-center md:hidden lg:hidden">
        {% endif %}
        <!-- Desktop Image -->
        {% if desktopImageInternal %}
        <img src="{{ desktopImageInternal | img_url: 'master' }}" alt="{{ desktopImageInternal.alt }}"
          class="w-full h-full object-cover object-center hidden md:block lg:block">
        {% endif %}
      </div>
      {% endfor %}
    </div>

    <!-- Swiper Pagination -->
    <div
      class="container-swiper-pagination absolute left-0 right-0 bottom-6 w-full h-auto z-10 flex items-center justify-center">
      <div class="swiper-pagination-overlay flex items-center justify-center"></div>
    </div>

    <div class="w-auto hidden absolute top-0 right-0 h-screen items-center justify-center md:flex lg:flex">
      <div
        class="swiper-button-next-internal bg-[rgba(0,0,0,0.20)] backdrop-blur-xl w-[52px] h-[52px] rounded-full z-20 mr-10 flex items-center justify-center">
        {% render 'arrow-right-white' %}
      </div>
    </div>
    <div class="w-auto hidden absolute top-0 left-0 h-screen items-center justify-center md:flex lg:flex">

      <div
        class="swiper-button-prev-internal bg-[rgba(0,0,0,0.20)] backdrop-blur-xl w-[52px] h-[52px] rounded-full z-20 ml-10 flex items-center justify-center">
        {% render 'arrow-left-white' %}
      </div>
    </div>

    <!-- Turn into Landscape Message -->
    <div
      class="turn-button w-full h-auto flex items-center justify-center absolute left-0 right-0 bottom-[46px] lg:hidden">
      <div class="min-w-[148px] min-h-[32px] bg-[rgba(0,0,0,0.20)] backdrop-blur-xl rounded-3xl py-2 px-4 z-20">
        <p class="body-14 tt-norms-pro-med text-white">
          {{ section.settings.turn_landscape | default: "Turn into landscape" }}
        </p>
      </div>
    </div>
  </div>

</div>




<div class="w-full h-auto flex flex-col items-start justify-center" id="design">

  <!-- container main title -->
