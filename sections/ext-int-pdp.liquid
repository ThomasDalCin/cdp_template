    <p class="text-[64px] leading-[56px]">{{ section.settings.main_title | default: "Design" |  upcase }}</p>
  </div>

  <!-- container text exteriors text and images -->
  <div class="w-full h-auto flex flex-col items-start justify-center">
    <!-- container text -->
    <div
      class="w-full h-auto flex flex-col items-start justify-center px-6 pt-12 pb-6 gap-y-6 md:px-12 lg:px-12 lg:py-[60px]">
